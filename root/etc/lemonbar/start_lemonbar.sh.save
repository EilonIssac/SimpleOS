#!/bin/bash

Clock() {
        DATETIME=$(date "+%a %b %d, %r")
        printf "$DATETIME"
}

Battery() {
        BATPERC=$(cat /sys/class/power_supply/BAT0/capacity)
        if [ "$BATPERC" -gt "50" ]; then
                result="\uf240"
        fi
        if [ "$BATPERC" -le "50" ]; then
                result="\uf242"
        fi
        if [[ "$(cat /sys/class/power_supply/BAT0/status)" == "Charging" ]]; then
                result="\uf5df"
        fi
        echo -e "$result""$BATPERC""%"
}

Dropdown() {
        state=$(cat /etc/tray/tmp/state)
        if [[ $state == "0" ]]; then
                restult="\uf0de"
        elif [[ $state == "1" ]]; then
                result="\uf0dd"
        fi
        echo -e "$result"
}

while true
do
        echo -e "%{A:/etc/xmenu/menu_wq.sh &:}  Menu%{A} %{A:/etc/lemonbar/start_sound.sh &:} Sound%{A} %{A:/etc/xmenu/customize.sh &:} Customize%{A} %{A:/etc/xmenu/min_tray.sh &:} Minimized%{A} %{A:rm /etc/9menu/tmp/*; rmdir /etc/9menu/tmp
        sleep 0.1
done
